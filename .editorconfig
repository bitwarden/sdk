# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts,scss,html}]
indent_style = space
indent_size = 2

[*.{ts}]
quote_type = single

[*.{rs}]
indent_style = space
indent_size = 4

[*.{kt,java,xml,gradle}]
indent_style = space
indent_size = 4

[*.{xml}]
# VS Code XML extension removes the final newline
insert_final_newline = false
